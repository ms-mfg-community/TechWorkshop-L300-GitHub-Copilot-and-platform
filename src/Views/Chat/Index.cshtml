@model List<ZavaStorefront.Models.ChatMessage>
@{
    ViewData["Title"] = "Chat with AI";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="mb-4">@ViewData["Title"]</h2>
        
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Chat Assistant</h5>
            </div>
            <div class="card-body">
                <div id="chatMessages" class="mb-3" style="height: 400px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 0.25rem; padding: 1rem; background-color: #f8f9fa;">
                    <div class="text-muted text-center" id="emptyState">
                        <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                        <p>Start a conversation with the AI assistant</p>
                    </div>
                </div>
                
                <form id="chatForm">
                    <div class="input-group">
                        <input type="text" 
                               id="messageInput" 
                               class="form-control" 
                               placeholder="Type your message here..." 
                               required 
                               autocomplete="off">
                        <button type="submit" 
                                class="btn btn-primary" 
                                id="sendButton">
                            <i class="bi bi-send"></i> Send
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>Note:</strong> This chat assistant is powered by Microsoft Foundry Phi-4. 
            Make sure the endpoint is properly configured in your application settings.
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const chatMessages = $('#chatMessages');
            const emptyState = $('#emptyState');
            const messageInput = $('#messageInput');
            const sendButton = $('#sendButton');
            const chatForm = $('#chatForm');

            function appendMessage(role, content, timestamp) {
                if (emptyState.is(':visible')) {
                    emptyState.hide();
                }

                const messageClass = role === 'user' ? 'bg-primary text-white' : 'bg-light';
                const alignClass = role === 'user' ? 'ms-auto' : 'me-auto';
                const time = timestamp ? new Date(timestamp).toLocaleTimeString() : new Date().toLocaleTimeString();
                
                const messageHtml = `
                    <div class="mb-3 d-flex ${role === 'user' ? 'justify-content-end' : 'justify-content-start'}">
                        <div class="p-3 rounded ${messageClass}" style="max-width: 75%;">
                            <strong>${role === 'user' ? 'You' : 'AI Assistant'}:</strong>
                            <p class="mb-1">${escapeHtml(content)}</p>
                            <small class="text-muted" style="${role === 'user' ? 'color: rgba(255,255,255,0.7) !important;' : ''}">${time}</small>
                        </div>
                    </div>
                `;
                
                chatMessages.append(messageHtml);
                chatMessages.scrollTop(chatMessages[0].scrollHeight);
            }

            function escapeHtml(text) {
                const map = {
                    '&': '&amp;',
                    '<': '&lt;',
                    '>': '&gt;',
                    '"': '&quot;',
                    "'": '&#039;'
                };
                return text.replace(/[&<>"']/g, function(m) { return map[m]; });
            }

            function setLoading(isLoading) {
                sendButton.prop('disabled', isLoading);
                messageInput.prop('disabled', isLoading);
                
                if (isLoading) {
                    sendButton.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sending...');
                } else {
                    sendButton.html('<i class="bi bi-send"></i> Send');
                }
            }

            chatForm.on('submit', function(e) {
                e.preventDefault();
                
                const message = messageInput.val().trim();
                if (!message) {
                    return;
                }

                // Display user message
                appendMessage('user', message, new Date().toISOString());
                
                // Clear input
                messageInput.val('');
                
                // Set loading state
                setLoading(true);

                // Send message to server
                $.ajax({
                    url: '@Url.Action("SendMessage", "Chat")',
                    type: 'POST',
                    data: { message: message },
                    success: function(data) {
                        setLoading(false);
                        
                        if (data.success) {
                            appendMessage('assistant', data.response, new Date().toISOString());
                        } else {
                            appendMessage('assistant', 'Error: ' + (data.error || 'Failed to get response'), new Date().toISOString());
                        }
                        
                        messageInput.focus();
                    },
                    error: function(xhr, status, error) {
                        setLoading(false);
                        appendMessage('assistant', 'Error: Failed to send message. Please try again.', new Date().toISOString());
                        console.error('Error:', error);
                        messageInput.focus();
                    }
                });
            });

            // Focus on input when page loads
            messageInput.focus();
        });
    </script>
}
